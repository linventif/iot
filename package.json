{
	"name": "auto-pool-pump",
	"private": true,
	"packageManager": "bun@1.2.19",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"dev:api": "turbo dev --filter=@auto-pool-pump/api",
		"dev:website": "turbo dev --filter=@auto-pool-pump/website",
		"dev:ws": "turbo dev --filter=@auto-pool-pump/websocket",
		"dev:web": "turbo dev --filter=@auto-pool-pump/website",
		"lint": "turbo lint",
		"type-check": "turbo type-check",
		"clean": "turbo clean && rm -rf node_modules apps/*/node_modules packages/*/node_modules",
		"simulate": "bun run simulate-esp32.ts",
		"db:generate": "drizzle-kit generate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"compose:up": "docker compose -f docker-compose.yml up --build --remove-orphans",
		"compose:down": "docker compose -f docker-compose.yml down -v",
		"compose:logs": "docker compose -f docker-compose.yml logs -f",
		"compose:ps": "docker compose -f docker-compose.yml ps",
		"compose:dev": "docker compose -f docker-compose.dev.yml up --build --remove-orphans",
		"compose:dev:down": "docker compose -f docker-compose.dev.yml down -v",
		"docker:api:build": "docker build -f apps/api/Dockerfile -t auto-pool-pump-api ."
	},
	"devDependencies": {
		"@types/bun": "latest",
		"turbo": "^2.5.5",
		"typescript": "^5.8.3",
		"drizzle-kit": "^0.31.4"
	},
	"dependencies": {
		"@libsql/client": "^0.15.10",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.3",
		"drizzle-typebox": "^0.3.3",
		"drizzle-zod": "^0.8.2",
		"elysia": "latest",
		"mysql2": "^3.14.2",
		"solid-apexcharts": "^0.4.0",
		"yargs": "^18.0.0",
		"zod": "^4.0.10"
	},
	"overrides": {
		"@sinclair/typebox": "0.34.33"
	}
}
