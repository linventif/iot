{
	"name": "auto-pool-pump",
	"private": true,
	"packageManager": "bun@1.2.19",
	"workspaces": [
		"apps/*"
	],
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"dev:api": "turbo dev --filter=@auto-pool-pump/api",
		"dev:website": "turbo dev --filter=@auto-pool-pump/website",
		"dev:ws": "turbo dev --filter=@auto-pool-pump/websocket",
		"dev:web": "turbo dev --filter=@auto-pool-pump/website",
		"lint": "turbo lint",
		"type-check": "turbo type-check",
		"clean": "turbo clean && rm -rf node_modules apps/*/node_modules packages/*/node_modules",
		"simulate": "bun run simulate-esp32.ts",
		"db:generate": "cd apps/api && drizzle-kit generate && cd ../../",
		"db:migrate": "cd apps/api && drizzle-kit migrate && cd ../../",
		"db:studio": "cd apps/api && drizzle-kit studio && cd ../../",
		"db:push": "cd apps/api && drizzle-kit push && cd ../../",
		"db:reset": "cd apps/api && drizzle-kit push --force && cd ../../"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"turbo": "^2.5.5",
		"typescript": "^5.8.3",
		"drizzle-kit": "^0.31.4"
	},
	"dependencies": {
		"@libsql/client": "^0.15.10",
		"dotenv": "^17.2.0",
		"drizzle-orm": "^0.44.3",
		"drizzle-typebox": "^0.3.3",
		"mysql2": "^3.14.2",
		"yargs": "^18.0.0"
	},
	"overrides": {
		"@sinclair/typebox": "0.34.33"
	}
}
