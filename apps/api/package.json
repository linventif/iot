{
	"name": "api",
	"version": "1.0.50",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "bun run --watch src/index.ts",
		"start": "bun run ../../dist/apps/api/index.js",
		"docker:build": "docker build -f Dockerfile -t auto-pool-pump-api ../../",
		"docker:run": "docker run --rm -p 4001:4001 --name auto-pool-pump-api auto-pool-pump-api",
		"docker:tag-ghcr": "docker tag auto-pool-pump-api ghcr.io/$USER/auto-pool-pump-api:latest",
		"docker:push-ghcr": "docker push ghcr.io/$USER/auto-pool-pump-api:latest",
		"clean": "rm -rf ../../dist/apps/api",
		"prebuild": "bun run clean",
		"build": "bunx tsc -p tsconfig.json",
		"prestart": "bun run build"
	},
	"dependencies": {
		"@schemas": "workspace:*",
		"@elysiajs/cors": "^1.3.3",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.3",
		"drizzle-zod": "^0.8.2",
		"elysia": "latest",
		"mysql2": "^3.14.2",
		"zod": "^4.0.10"
	},
	"devDependencies": {
		"bun-types": "latest",
		"drizzle-kit": "^0.31.4"
	},
	"module": "src/index.js",
	"engines": {
		"bun": ">=1.1.0"
	}
}